{% extends 'base.html.twig' %}

{% block title %}{{ event.titre }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1 class="h2">{{ event.titre }}</h1>
                    <p class="lead text-muted">
                        {{ event.date|date('d/m/Y H:i') }} • {{ event.lieu }}
                    </p>
                </div>
                <span class="badge bg-{{ event.placesDisponibles > 0 ? 'success' : 'danger' }}">
                    {{ event.placesDisponibles }} places
                </span>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show mt-3">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show mt-3">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h3 class="h5">Description</h3>
            <p>{{ event.description }}</p>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h3 class="h5">Détails</h3>
                    <ul class="list-unstyled">
                        <li><strong>Date :</strong> {{ event.date|date('d/m/Y H:i') }}</li>
                        <li><strong>Lieu :</strong> {{ event.lieu }}</li>
                        <li><strong>Places :</strong> {{ event.placesDisponibles }} disponibles</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    {% if reservationForm is defined and event.placesDisponibles > 0 %}
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="h5">Réserver des places</h3>
                {{ form_start(reservationForm) }}
                    <div class="mb-3">
                        {{ form_row(reservationForm.nombreDePlaces, {
                            'attr': {
                                'min': 1,
                                'max': event.placesDisponibles
                            }
                        }) }}
                        <small class="text-muted">Maximum {{ event.placesDisponibles }} places disponibles</small>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Réserver
                    </button>
                {{ form_end(reservationForm) }}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}