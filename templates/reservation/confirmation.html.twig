{% extends 'base.html.twig' %}

{% block title %}Confirmation de réservation - EventPop{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .confirmation-container {
            max-width: 800px;
            margin: 100px auto 50px;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            background: white;
        }
        
        .confirmation-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .confirmation-icon {
            font-size: 4rem;
            color: #28a745;
            margin-bottom: 20px;
        }
        
        .event-details {
            border: 1px solid #eee;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
        }
        
        .detail-row {
            display: flex;
            margin-bottom: 10px;
        }
        
        .detail-label {
            font-weight: bold;
            width: 150px;
            color: #555;
        }
        
        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 30px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="confirmation-container">
    <div class="confirmation-header">
        <div class="confirmation-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1>Réservation confirmée !</h1>
        <p class="lead">Merci pour votre réservation. Voici les détails :</p>
    </div>
    
<div class="event-details">
    <h3 class="mb-4">{{ event.titre }}</h3>
    
    <div class="detail-row">
        <span class="detail-label">Date :</span>
        <span>{{ event.date|date('d/m/Y H:i') }}</span>
    </div>
    
    <div class="detail-row">
        <span class="detail-label">Lieu :</span>
        <span>{{ event.lieu }}</span>
    </div>
    
    <div class="detail-row">
        <span class="detail-label">Places réservées :</span>
        <span>{{ reservation.nombreDePlaces }}</span>
    </div>
    
    <div class="detail-row">
        <span class="detail-label">Date de réservation :</span>
        <span>{{ reservation.dateReservation|date('d/m/Y H:i') }}</span>
    </div>
</div>
    
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Un email de confirmation a été envoyé à <strong>{{ app.user.email }}</strong> avec vos billets.
    </div>
    
    <div class="action-buttons">
        <a href="{{ path('event_list') }}" class="btn btn-outline-primary">
            <i class="fas fa-calendar-alt me-2"></i>Voir les événements
        </a>
        <a href="{{ path('app_user_dashboard') }}" class="btn btn-primary">
            <i class="fas fa-home me-2"></i>Retour à l'accueil
        </a>
    </div>
</div>
{% endblock %}