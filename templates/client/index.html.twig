{% extends 'base.html.twig' %}

{% block title %}Mon Profil - Client{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="profile-card">
        <div class="profile-header">
            <img src="https://ui-avatars.com/api/?name={{ user.nom|default('')|url_encode }}&background=random&size=120" 
                 class="profile-avatar" 
                 alt="Photo de profil">
            <h2>{{ user_data.nom|default('Utilisateur') }}</h2>
            <p class="mb-0">{{ user.email|default('') }}</p>
        </div>
        
        <div class="profile-body">
            <div class="profile-detail">
                <h5>Informations personnelles</h5>
                <p><i class="fas fa-envelope me-2"></i> {{ user.email|default('Non renseigné') }}</p>
                <p><i class="fas fa-phone me-2"></i> {{ user.telephone|default('Non renseigné') }}</p>
            </div>
            
            <div class="text-center mt-4">
                <a href="#" class="btn btn-primary me-2">
                    <i class="fas fa-edit me-1"></i> Modifier le profil
                </a>
            </div>
        </div>
    </div>
    
</div>
{% endblock %}